<% provide(:title, 'ロードマップのステップ') %>
  <div class="container share-container">
  <% breadcrumb :posts_index  %>
  <%= breadcrumbs separator: " > " , class: :logo %>
    <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-dark rounded shadow-sm">
      <i class="mr-2 fas fa-road fa-2x"></i>
      <div class="h1 mb-0 text-white lh-100">
        <% if current_user?(@user) %>
          ステップの記録
        <% else %>
          ステップの記録
        <% end %>
      </div>
    </div>

    <%= render 'shared/my_steps_for_posts' %>

    <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-dark rounded shadow-sm">
      <i class="mr-2 fas fa-shoe-prints fa-2x"></i>
      <div class="h1 mb-0 text-white lh-100">
        独学の記録 (<%= @step.posts.count %>)
      </div>
    </div>

      <% if current_user?(@user) %>
        <%= render 'shared/post_form' %>
      <% end %>
      
      <% if @step.posts.any? %>
        <div class="row">
          <div class="col-md-12">
              <%= will_paginate @posts %>
            <ol class="microposts">
              <%= render @posts %>
            </ol>
              <%= will_paginate @posts %>
          </div>
        </div>
      <% end %>
  </div>