<% provide(:title, 'Reset email') %>

<div class="container share-container">
  <h1>Reset email</h1>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_with model: @user, url: email_reset_path(params[:id]), local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= hidden_field_tag :email, @user.email %>

        <%= f.label :現在のメールアドレス %>
        <div class ="form-control">
          <%= @user.email %>
        </div>

        <%= f.label :新しいemail %>
        <%= f.email_field :email, value: @user.email_reset_before, :readonly => true, autocomplete: 'off', class: 'form-control' %>

        <%= f.label :パスワード %>
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>

        <%= f.submit "Update email", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>