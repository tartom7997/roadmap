<% provide(:title, "入力の内容の確認") %>
  <div class="container share-container">
    <div class="p-3 bg-white rounded shadow-sm">

      <h1>Contact</h1>
        <p>

          <p class="mt-3">お名前</p>
          <div class ="form-control">
            <%= @contact.name %>
          </div>

          <p class="mt-3">Eメールアドレス</p>
          <div class ="form-control">
            <%= @contact.email %>
          </div>

          <p class="mt-3">タイトル</p>
          <div class ="form-control">
            <%= @contact.subject %>
          </div>

          <p class="mt-3">メッセージ</p>
          <div class ="form-control-plaintext form--control__background">
            <%= @contact.message %>
          </div>


    <div class="mt-3">
      <%= form_with model:@contact, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :phone_number %>
        <%= f.hidden_field :subject %>
        <%= f.hidden_field :message %>
        <div><%= f.submit '送信', class: 'btn btn-primary btn-block' %></div>
      <% end %>
      
      <%= form_with model:@contact, url: back_path, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :phone_number %>
        <%= f.hidden_field :subject %>
        <%= f.hidden_field :message %>
        <div><%= f.submit '入力画面に戻る', class: 'btn btn-primary btn-block' %></div>
      <% end %>  
    </div>

    </div>
  </div>