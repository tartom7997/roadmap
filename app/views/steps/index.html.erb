<% provide(:title, 'ロードマップのステップ') %>
  <div class="container share-container">
  <% breadcrumb :steps_show  %>
  <%= breadcrumbs separator: " > " , class: :logo %>
    <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-dark rounded shadow-sm">
      <i class="mr-2 fas fa-road fa-2x"></i>
      <div class="h1 mb-0 text-white lh-100">
        <% if current_user?(@user) %>
          ロードマップのステップ
        <% else %>
          ロードマップのステップ
        <% end %>
      </div>
    </div>

    <%= render 'shared/my_roadmaps_for_steps' %>

    <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-dark rounded shadow-sm">
      <i class="mr-2 fas fa-shoe-prints fa-2x"></i>
      <div class="h1 mb-0 text-white lh-100">
        ステップ (<%= @roadmap.steps.count %>)
      </div>
    </div>

      <% if current_user?(@user) %>
        <%= render 'shared/step_form' %>
      <% end %>
      
      <% if @roadmap.steps.any? %>
        <div class="row">
          <div class="col-md-12">
              <%= will_paginate @steps %>
            <ol class="microposts">
              <%= render @steps %>
            </ol>
              <%= will_paginate @steps %>
          </div>
        </div>
      <% end %>
  </div>