              <div class="media-body pb-3 mb-0 lh-125 border-bottom border-gray">
                  <p class= "h4 d-block text-gray-dark"> 目的 </p>
                    <%= roadmap.purpose %>
              </div>
            </div>
          </div>
          <div class="my-3 p-3 bg-white rounded shadow-sm panel-body">
            <div class="media text-muted pt-3">
            <i class="mr-2 fas fa-signal fa-2x"></i>
              <div class="media-body pb-3 mb-0 lh-125 border-bottom border-gray">
                  <p class= "h4 d-block text-gray-dark"> 目標 </p>
                    <%= roadmap.target %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="collapse-<%= roadmap.id %>" class="col-md-12 panel-collapse collapse in my-3 p-3 bg-white rounded shadow-sm text-right">
        <span class="timestamp panel-body">
          Updated <%= time_ago_in_words(roadmap.updated_at) %> ago.
        </span>
        <div class="my-3 roadmap__btn--create d-grid gap-2 d-md-flex justify-content-md-end" >
          <%= link_to "ロードマップの詳細を見る", user_roadmap_steps_path(roadmap.user, roadmap.id), class: "btn btn-sm btn-primary", data: {"turbolinks" => false} %>
        </div>
      </div>
    </div>
  </li>
<% end %>